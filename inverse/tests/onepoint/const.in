# add a layer Lx --> Lx+2*w, Lz --> Lz+w
#  w = 2500
grid h=200 x=35000 y=35000 z=19500
time t=9
fileio verbose=1 path=const_obs

# supergrid parameters
# h=200
#supergrid gp=13 dc=.015
# h=100
#supergrid gp=26 dc=.015
# h=50
