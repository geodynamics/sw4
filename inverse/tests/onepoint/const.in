# Exact solution is a constant (LOH1 average) material:
block vp=4630.76 vs=2437.56 r=2650

# Source at 2000 meter depth
source x=17500 y=17500 z=2000 Mxy=1 m0=1e18 t0=1.5 freq=4 type=Gaussian
