#!/bin/bash
#SBATCH -A GEO130_crusher
#SBATCH -J SW4SCR
#SBATCH -o %x-%j.out
#SBATCH -t 00:25:00
#SBATCH -p batch
#SBATCH -N 1

export FI_MR_CACHE_MAX_COUNT=0
export MPICH_GPU_SUPPORT_ENABLED=1
# Option below for multinode runs only
export MPICH_OFI_NIC_POLICY=NUMA
export SCR_DEBUG=1
export SCR_CACHE_BYPASS=0
export SCR_FLUSH=0
srun -N 1 -n 8 -c8 --gpus-per-task=1 --gpu-bind=closest -p batch ./sw4 checkpoint.in.summit
srun -N 1 -n 8 -c8 --gpus-per-task=1 --gpu-bind=closest -p batch ./sw4 restart.in.summit
